<!DOCTYPE html>
<html>
<head>
  <title><%= title %></title>
  <link rel="stylesheet" href="/css/cosmo.min.css">
  <link rel="stylesheet" href="/css/style.css">
  <script src="/jquery/dist/jquery.js"></script>
  <script src="/underscore/underscore.js"></script>
  <script src="/backbone/backbone.js"></script>
  <script src="/react/react.js"></script>
  <script src="/conduitjs/lib/conduit.js"></script>
  <script src="/lodash/lodash.js"></script>
  <script src="/postal.js/lib/postal.js"></script>
  <script src="/momentjs/moment.js"></script>
  <script src="/js/md5.js"></script>
  <script src="/js/socket.io.js"></script>
</head>
<body>
<div class="container">
  <div class="row">
    <div class="col-sm-4"><h1>PacktChat</h1></div>
    <div class="col-sm-4 col-sm-offset-4 top-margin">
      <div class="pull-right">
        <% if (isAuthenticated) { %>
          <%- partial('partials/user-loggedin') %>
        <% } else { %>
          <%- partial('partials/user-loggedout') %>
        <% } %>
      </div>
    </div>
  </div>
  <div class="row">
  <%- body %>
  </div>
</body>
</html>